# Setting Wallpaper
exec_always feh --bg-scale /home/puven/Pictures/Wallpapers/skulls.png

# Volume Keys
# Mute/Unmute
bindcode 121 exec amixer -q -D pulse set Master toggle
# Raise volume
bindcode 123 exec amixer -q -D pulse set Master 5%+ unmute
# Lower volume
bindcode 122 exec amixer -q -D pulse set Master 5%- unmute
# Raise Brightness
bindcode 233 exec brightnessctl set 5%+
# Lower Brightness
bindcode 232 exec brightnessctl set 5%-
#
#Screenshot
bindsym Print exec --no-startup-id maim -u -m 10 ~/Pictures/Screenshots/"$(date '+%d.%m.%y-%H:%M:%S').png"
# Ricing
for_window [class="^.*"] border pixel 2
gaps inner 10
gaps outer 5
exec --no-startup-id compton --config /home/puven/.config/compton/config
exec --no-startup-id syndaemon -i 1 -d
#editing my i3 config file on the fly
bindsym $mod+i exec gnome-terminal -- vim /home/puven/.config/i3/config
#screensaver
bindsym $mod+shift+x exec gnome-terminal --full-screen -- cmatrix -absu 5
#Firefox
bindsym $mod+shift+f exec firefox
# gaps
bindsym $mod+Ctrl+y	gaps inner current plus 5
bindsym $mod+Ctrl+u	gaps inner current minus 5
bindsym $mod+Ctrl+i	gaps outer current minus 5
bindsym $mod+Ctrl+o gaps outer current plus 5
bindsym $mod+Ctrl+0 gaps inner current set 10 ; gaps outer current set 5
